    <script>
        function setTransport(type) {
            document.getElementById('transportType').value = type;
            const covoitDiv = document.getElementById('covoit-choice');
            const covoitLabel = document.getElementById('covoit-label');
            const btnCar = document.getElementById('btn-car');
            const btnTrain = document.getElementById('btn-train');

            covoitDiv.classList.remove('hidden');
            
            if(type === 'Voiture') {
                covoitLabel.innerText = "Proposez-vous des places de covoiturage ?";
                btnCar.classList.add('border-blue-600', 'bg-blue-50');
                btnTrain.classList.remove('border-blue-600', 'bg-blue-50');
            } else {
                covoitLabel.innerText = "Cherchez-vous un covoiturage depuis la gare ?";
                btnTrain.classList.add('border-blue-600', 'bg-blue-50');
                btnCar.classList.remove('border-blue-600', 'bg-blue-50');
            }
        }

        document.getElementById('mainForm').onsubmit = function(e) {
            e.preventDefault();
            const data = {
                sdis: document.getElementById('sdis').value,
                transport: document.getElementById('transportType').value,
                covoit: document.getElementById('covoit-option').value,
                diner: document.getElementById('dinner').checked ? "Pr√©sent" : "Absent"
            };

            document.getElementById('mainForm').classList.add('hidden');
            document.getElementById('success').classList.remove('hidden');
            document.getElementById('summaryText').innerText = 
                `Merci au ${data.sdis}. Transport : ${data.transport} (Covoit: ${data.covoit}). D√Æner : ${data.diner}.`;
            
            console.log("Donn√©es √† envoyer au serveur :", data);
        };
    </script>
